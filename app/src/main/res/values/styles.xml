<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="panelTitle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="panelText">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="panelIcon">
        <item name="android:tint">@color/colorGray</item>
    </style>

    <style name="panelButton">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:background">@drawable/button_green_ripple_tbl</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="glassToast">
        <item name="stGravity">center</item>
        <item name="stColorBackground">@color/colorGlassFoggy</item>
        <item name="stTextColor">@android:color/tab_indicator_text</item>
        <item name="stRadius">15dp</item>
    </style>

</resources>
