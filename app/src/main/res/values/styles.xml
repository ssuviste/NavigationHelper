<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/SlideActivityAnimation</item>
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="panelTitle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="panelText">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="panelIcon">
        <item name="android:tint">@color/colorGray</item>
    </style>

    <style name="panelButton">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:background">@drawable/button_green_ripple_tbl</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="mainMenuButton">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:background">@drawable/button_green_ripple_b</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="mainMenuTextView">
        <item name="android:textSize">14sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">32sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="loginButton">
        <item name="android:textSize">18sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="android:background">@drawable/button_green_ripple_tblr</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="recyclerItemTitle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeMaxTextSize">36sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreenMilitary</item>
    </style>

    <style name="preferencesSwitchTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="preferencesSwitch">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="textViewDefault">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="helpSubtitleTextView">
        <item name="android:textColor">@color/colorGreenMilitary</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="helpTextView">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="helpTextIcon">
        <item name="android:tint">@color/colorGreenMilitary</item>
    </style>

    <style name="glassToast">
        <item name="stGravity">center</item>
        <item name="stColorBackground">@color/colorGlassFoggy</item>
        <item name="stRadius">15dp</item>
    </style>

</resources>
