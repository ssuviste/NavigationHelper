<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_green_ripple_b"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewTrackIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/cont_desc_track_icon"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        app:srcCompat="@drawable/baseline_timeline_green_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSessionTitle"
            style="@style/recyclerItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"
            android:text="@string/session_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/textViewDateDesc"
                style="@style/textViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewSessionDate"
                style="@style/textViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/date_sample"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textViewCPsDesc"
                style="@style/textViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="@string/checkpoints"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewSessionCPsCount"
                style="@style/textViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/zero"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>