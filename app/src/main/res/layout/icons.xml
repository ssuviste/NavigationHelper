<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/walkDistIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cont_desc_walk_icon"
        app:layout_constraintBottom_toTopOf="@+id/flyDistIcon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flyDistIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_directions_run_24" />

    <ImageView
        android:id="@+id/flyDistIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cont_desc_fly_icon"
        app:layout_constraintBottom_toTopOf="@+id/timeIcon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/timeIcon"
        app:layout_constraintTop_toBottomOf="@+id/walkDistIcon"
        app:srcCompat="@drawable/baseline_flight_24" />

    <ImageView
        android:id="@+id/timeIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cont_desc_time_icon"
        app:layout_constraintBottom_toTopOf="@+id/speedIcon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/speedIcon"
        app:layout_constraintTop_toBottomOf="@+id/flyDistIcon"
        app:srcCompat="@drawable/baseline_schedule_24" />

    <ImageView
        android:id="@+id/speedIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/cont_desc_speed_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeIcon"
        app:srcCompat="@drawable/baseline_speed_24" />
</androidx.constraintlayout.widget.ConstraintLayout>