<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="1dp" />
                    <stroke android:width="2dp" android:color="@color/colorShadow" />
                </shape>
            </item>
            <item android:top="1dp" android:bottom="2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="1dp" />
                    <padding android:bottom="1dp" android:left="1dp"
                        android:right="1dp" android:top="1dp" />
                    <solid android:color="@color/colorGlassWhiteFoggy" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>